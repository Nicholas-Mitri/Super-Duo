<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/widget_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:orientation="horizontal"
        android:layout_marginBottom="1dp"
        android:background="@color/green12">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/TeamNames"
                android:gravity="center_horizontal|top"
                android:text="@string/test_text"
                android:id="@+id/widget_home_name"
                android:layout_weight="1"
                android:textColor="@android:color/black"
                android:ellipsize="end"
                android:maxLines="2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textSize="@dimen/widgetSecondaryFont"
                android:gravity="center"
                android:text="@string/test_text"
                android:id="@+id/widget_league_name"
                android:layout_weight="1"
                android:textColor="@android:color/darker_gray"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/vs"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/vs"
                android:id="@+id/widget_vs"
                android:textColor="@android:color/black"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/test_text"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:textSize="@dimen/Score"
                android:id="@+id/widget_score_textview"
                android:textColor="@android:color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|top"
                android:text="@string/test_text"
                android:layout_weight="1"
                android:textSize="@dimen/TeamNames"
                android:id="@+id/widget_away_name"
                android:textColor="@android:color/black"
                android:ellipsize="end"
                android:maxLines="2" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:text="@string/test_text"
                android:textSize="@dimen/widgetSecondaryFont"
                android:id="@+id/widget_data_textview"
                android:textColor="@android:color/darker_gray"
                android:layout_weight="1" />


        </LinearLayout>


    </LinearLayout>



</FrameLayout>